.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: calc(110rpx + env(safe-area-inset-bottom));
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  border-radius: 40rpx 40rpx 0 0;
  box-shadow: 0 -4rpx 12rpx rgba(93, 64, 55, 0.05);
  z-index: 9999;
  /* Cloud shape effect */
  background-image: radial-gradient(circle at 50% -20rpx, transparent 30rpx, #FFFFFF 31rpx);
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  display: none;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.icon-container {
  transition: all 0.3s cubic-bezier(0.68, -0.55, 0.265, 1.55);
}

.icon-container.selected {
  transform: translateY(-10rpx) scale(1.1);
}

.tab-text {
  font-size: 20rpx;
  margin-top: 6rpx;
  font-weight: 600;
}
