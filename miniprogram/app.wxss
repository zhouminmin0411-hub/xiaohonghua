/* 全局样式 - 春日花园 Spring Garden v2.0 */

page {
  background-color: #FFF9E6; /* 晨光白 */
  font-family: "Yuppy SC", "Wawa SC", "SF Pro Rounded", "PingFang SC", sans-serif;
  color: #5D4037; /* 可可棕 */
  --safe-area-inset-bottom: env(safe-area-inset-bottom);
}

/* 色板定义 (基于 Spec v2.0) */
:root {
  --primary-red: #FF6B6B;   /* 小红花红 Coral Red */
  --bg-cream: #FFF9E6;      /* 晨光白 Light Milky */
  --text-brown: #5D4037;    /* 可可棕 Cocoa Brown */
  --btn-yellow: #FFD93D;    /* 阳光黄 Sunny Yellow */
  --success-green: #6BCB77; /* 草地绿 Fresh Green */
  --accent-blue: #4D96FF;   /* 天空蓝 Sky Blue */
  --card-white: rgba(255, 255, 255, 0.9); /* 云朵白 Cloud White */
  
  --shadow-color: #5D4037;
}

/* 绘本风卡片 */
.card {
  background: var(--card-white);
  border-radius: 40rpx; /* 20pt -> 40rpx */
  box-shadow: 0 4rpx 12rpx rgba(93, 64, 55, 0.05); /* 柔光阴影 */
  padding: 32rpx;
  margin: 24rpx;
  border: 4rpx dashed #FFD93D; /* 虚线边框 */
  backdrop-filter: blur(10px);
}

/* 绘本风主按钮 */
.primary-btn {
  background: var(--btn-yellow) !important;
  color: var(--text-brown) !important;
  border-radius: 255px 15px 225px 15px / 15px 225px 15px 255px !important; /* 手绘不规则圆角 */
  padding: 24rpx 40rpx !important;
  font-size: 32rpx !important;
  font-weight: 600 !important;
  border: 4rpx solid var(--text-brown) !important; /* 手绘描边 */
  box-shadow: 0 8rpx 0 var(--text-brown) !important; /* 实色阴影 */
  transition: all 0.1s cubic-bezier(0.175, 0.885, 0.32, 1.275) !important;
}

.primary-btn:active {
  transform: scale(0.95) translateY(4rpx) !important;
  box-shadow: 0 4rpx 0 var(--text-brown) !important;
}

.primary-btn[disabled] {
  background: #E0E0E0 !important;
  border-color: #A0A0A0 !important;
  color: #A0A0A0 !important;
  box-shadow: none !important;
  transform: none !important;
}

/* 绘本风次按钮 */
.secondary-btn {
  background: transparent !important;
  border: 4rpx dashed var(--text-brown) !important;
  color: var(--text-brown) !important;
  border-radius: 40rpx !important;
  font-size: 28rpx !important;
  font-weight: 600 !important;
}

/* 小红花计数器样式 */
.flower-counter {
  background: rgba(255, 255, 255, 0.8);
  border: 4rpx solid #FFFFFF;
  border-radius: 32rpx;
  padding: 12rpx 28rpx;
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(93, 64, 55, 0.1);
}

.flower-counter-icon {
  font-size: 36rpx;
}

.flower-counter-number {
  font-size: 40rpx;
  font-weight: bold;
  color: var(--primary-red);
}

/* 文本样式 */
.text-title {
  font-size: 48rpx;
  font-weight: 600;
  color: var(--text-brown);
}

.text-body {
  font-size: 28rpx;
  color: var(--text-brown);
}

.text-secondary {
  font-size: 24rpx;
  color: rgba(93, 64, 55, 0.6);
}

/* 容器样式 */
.container {
  min-height: 100vh;
  padding-bottom: calc(160rpx + var(--safe-area-inset-bottom));
  background-image: radial-gradient(#FFD93D 10%, transparent 10%), radial-gradient(#FF6B6B 10%, transparent 10%);
  background-size: 60rpx 60rpx;
  background-position: 0 0, 30rpx 30rpx;
  background-color: var(--bg-cream);
  opacity: 1;
}

/* 覆盖 Vant 样式以匹配风格 */
.van-cell {
  background-color: transparent !important;
}

.van-cell-group {
  background-color: transparent !important;
}

/* 动画类 */
.fade-in {
  animation: fadeIn 0.4s ease-out;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(20rpx); }
  to { opacity: 1; transform: translateY(0); }
}
