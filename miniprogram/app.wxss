/* 全局样式 - 基于PRD第10章色板规范 */

page {
  background-color: #F9F9F9;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

/* 色板定义 */
:root {
  --primary-red: #FF5A5A;
  --soft-pink: #FFE8E8;
  --cream-yellow: #FFF6D9;
  --leaf-green: #C8E6C9;
  --sky-blue: #D7ECFF;
  --text-black: #333333;
  --text-gray: #666666;
  --bg-light: #F9F9F9;
  --divider-gray: #EAEAEA;
  --card-white: #FFFFFF;
}

/* 通用卡片样式 */
.card {
  background: var(--card-white);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.06);
  padding: 32rpx;
  margin: 24rpx;
}

/* 通用按钮样式 */
.primary-btn {
  background: var(--primary-red) !important;
  color: var(--card-white) !important;
  border-radius: 32rpx !important;
  padding: 24rpx 40rpx !important;
  font-size: 32rpx !important;
  border: none !important;
}

.primary-btn:active {
  opacity: 0.9;
  transform: scale(0.96);
}

/* 小红花计数器样式 */
.flower-counter {
  background: var(--soft-pink);
  border-radius: 28rpx;
  padding: 16rpx 32rpx;
  display: inline-flex;
  align-items: center;
  gap: 16rpx;
}

.flower-counter-icon {
  font-size: 40rpx;
}

.flower-counter-number {
  font-size: 56rpx;
  font-weight: bold;
  color: var(--primary-red);
}

/* 任务卡片样式 */
.task-card {
  background: var(--card-white);
  border-radius: 24rpx;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.06);
  padding: 32rpx;
  margin: 24rpx 0;
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.task-icon {
  font-size: 96rpx;
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.task-info {
  flex: 1;
}

.task-title {
  font-size: 40rpx;
  color: var(--text-black);
  font-weight: 500;
  margin-bottom: 8rpx;
}

.task-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 8rpx;
}

.task-tag {
  background: var(--cream-yellow);
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
  color: var(--text-gray);
}

.task-reward {
  color: var(--primary-red);
  font-size: 32rpx;
  font-weight: bold;
}

/* 标签样式 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 28rpx;
}

.tag-pink {
  background: var(--soft-pink);
  color: var(--primary-red);
}

.tag-green {
  background: var(--leaf-green);
  color: #2E7D32;
}

.tag-blue {
  background: var(--sky-blue);
  color: #1976D2;
}

/* 文本样式 */
.text-title {
  font-size: 64rpx;
  font-weight: bold;
  color: var(--text-black);
}

.text-heading {
  font-size: 48rpx;
  font-weight: 500;
  color: var(--text-black);
}

.text-body {
  font-size: 32rpx;
  color: var(--text-black);
}

.text-secondary {
  font-size: 28rpx;
  color: var(--text-gray);
}

/* 分隔线 */
.divider {
  height: 1px;
  background: var(--divider-gray);
  margin: 24rpx 0;
}

/* 容器样式 */
.container {
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.page-container {
  padding: 32rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
  color: var(--text-gray);
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
}

/* 动画类 */
.fade-in {
  animation: fadeIn 0.3s ease-in;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.scale-in {
  animation: scaleIn 0.2s ease-out;
}

@keyframes scaleIn {
  from {
    transform: scale(0.8);
    opacity: 0;
  }
  to {
    transform: scale(1);
    opacity: 1;
  }
}

