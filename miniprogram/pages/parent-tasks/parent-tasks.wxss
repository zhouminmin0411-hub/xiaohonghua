/* 家长任务管理页面样式 */

.container {
  min-height: 100vh;
  background: #F9F9F9;
  padding: 32rpx;
  padding-bottom: 160rpx;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.task-item {
  background: white;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.task-item.task-disabled {
  opacity: 0.5;
}

.task-icon {
  font-size: 64rpx;
  width: 64rpx;
  flex-shrink: 0;
}

.task-info {
  flex: 1;
  min-width: 0;
}

.task-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.task-meta {
  display: flex;
  gap: 16rpx;
  font-size: 24rpx;
  color: #999;
}

.task-type {
  background: #D7ECFF;
  color: #1976D2;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.task-reward {
  color: #FF5A5A;
}

.task-actions {
  display: flex;
  gap: 8rpx;
  flex-shrink: 0;
}

.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
}

.add-button-container {
  position: fixed;
  bottom: 120rpx;
  left: 32rpx;
  right: 32rpx;
}

