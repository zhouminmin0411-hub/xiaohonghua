.jar-container {
  width: 500rpx;
  height: 600rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  margin-bottom: 32rpx;
  overflow: visible;
}

.jar-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  z-index: 10;
}

.jar-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.points-badge {
  background: #FFFFFF;
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(107, 69, 43, 0.1);
  border: 2rpx solid #FFD93D;
}

.badge-icon {
  width: 40rpx;
  height: 40rpx;
}

.badge-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #6B452B;
}

.jar-tips {
  font-size: 26rpx;
  color: #8C7467;
}

/* 花瓣动画 - 微风飘落效果 */
.petal-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 20;
  overflow: visible;
}

.petal {
  position: absolute;
  width: 44rpx;
  height: 44rpx;
  left: var(--start-x, 0);
  top: var(--start-y, 0);
}

.petal-float {
  animation: petal-fall var(--duration, 9s) linear infinite;
  animation-delay: var(--delay, 0s);
  animation-fill-mode: backwards;
  opacity: 0;
}

.petal-img {
  width: 100%;
  height: 100%;
  filter: drop-shadow(0 2rpx 6rpx rgba(255, 107, 107, 0.3));
}

/* 完整的飘落动画 - 使用绝对位移rpx */
@keyframes petal-fall {
  0% {
    transform: translateX(0) translateY(0) rotate(0deg) scale(calc(var(--scale, 0.9) * 0.75));
    opacity: 0;
  }
  5% {
    opacity: 0.3;
  }
  10% {
    transform: translateX(calc(var(--h-drift, 0rpx) * 0.08)) translateY(calc(var(--v-drift, 600rpx) * 0.12)) rotate(20deg) scale(calc(var(--scale, 0.9) * 0.9));
    opacity: 0.6;
  }
  18% {
    transform: translateX(calc(var(--h-drift, 0rpx) * 0.18)) translateY(calc(var(--v-drift, 600rpx) * 0.22)) rotate(45deg) scale(var(--scale, 0.9));
    opacity: 0.8;
  }
  28% {
    transform: translateX(calc(var(--h-drift, 0rpx) * 0.32)) translateY(calc(var(--v-drift, 600rpx) * 0.35)) rotate(75deg) scale(calc(var(--scale, 0.9) * 1.03));
    opacity: 0.9;
  }
  38% {
    transform: translateX(calc(var(--h-drift, 0rpx) * 0.48)) translateY(calc(var(--v-drift, 600rpx) * 0.48)) rotate(110deg) scale(var(--scale, 0.9));
    opacity: 0.92;
  }
  48% {
    transform: translateX(calc(var(--h-drift, 0rpx) * 0.62)) translateY(calc(var(--v-drift, 600rpx) * 0.6)) rotate(150deg) scale(calc(var(--scale, 0.9) * 1.02));
    opacity: 0.9;
  }
  58% {
    transform: translateX(calc(var(--h-drift, 0rpx) * 0.75)) translateY(calc(var(--v-drift, 600rpx) * 0.72)) rotate(190deg) scale(var(--scale, 0.9));
    opacity: 0.88;
  }
  68% {
    transform: translateX(calc(var(--h-drift, 0rpx) * 0.85)) translateY(calc(var(--v-drift, 600rpx) * 0.82)) rotate(235deg) scale(calc(var(--scale, 0.9) * 0.98));
    opacity: 0.82;
  }
  78% {
    transform: translateX(calc(var(--h-drift, 0rpx) * 0.92)) translateY(calc(var(--v-drift, 600rpx) * 0.9)) rotate(280deg) scale(calc(var(--scale, 0.9) * 0.95));
    opacity: 0.7;
  }
  88% {
    transform: translateX(calc(var(--h-drift, 0rpx) * 0.97)) translateY(calc(var(--v-drift, 600rpx) * 0.96)) rotate(325deg) scale(calc(var(--scale, 0.9) * 0.9));
    opacity: 0.45;
  }
  96% {
    transform: translateX(calc(var(--h-drift, 0rpx) * 0.99)) translateY(calc(var(--v-drift, 600rpx) * 0.99)) rotate(calc(var(--rotation, 360deg) - 15deg)) scale(calc(var(--scale, 0.9) * 0.86));
    opacity: 0.15;
  }
  100% {
    transform: translateX(var(--h-drift, 0rpx)) translateY(var(--v-drift, 600rpx)) rotate(var(--rotation, 360deg)) scale(calc(var(--scale, 0.9) * 0.82));
    opacity: 0;
  }
}

/* 记录列表 */
.history-section {
  padding: 32rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #5D4037;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.history-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 32rpx;
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(93, 64, 55, 0.05);
  border: 4rpx solid transparent;
  transition: all 0.2s;
}

.item-income {
  background: #F0FFF4;
  border-color: #C6F6D5;
}

.item-expense {
  background: #FFF5F5;
  border-color: #FED7D7;
}

.history-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.history-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  font-size: 40rpx;
}

.item-income .history-icon-wrapper {
  background: #9AE6B4;
  color: #FFFFFF;
}

.item-expense .history-icon-wrapper {
  background: #FEB2B2;
  color: #FFFFFF;
}

.history-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #5D4037;
}

.history-time {
  font-size: 24rpx;
  color: #B3704C;
}

.history-right {
  font-size: 40rpx;
  font-weight: 700;
}

.history-right.income {
  color: #FF6B6B;
}

.history-right.expense {
  color: #6BCB77;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #B3704C;
}

