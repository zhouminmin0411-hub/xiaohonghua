/* 顶部区域 */
.header {
  padding: 24rpx 32rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-content {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.avatar-container {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(107, 69, 43, 0.1);
  overflow: hidden;
  background: #FFFFFF;
  flex-shrink: 0;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.default-avatar {
  width: 100%;
  height: 100%;
  background: #FFD93D;
  display: flex;
  align-items: center;
  justify-content: center;
}

.default-avatar-face {
  font-size: 48rpx;
}

.greeting-bubble {
  background: #FFFFFF;
  padding: 20rpx 32rpx;
  border-radius: 0 32rpx 32rpx 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(107, 69, 43, 0.05);
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  position: relative;
  margin-top: 12rpx;
}

.greeting-bubble::before {
  content: '';
  position: absolute;
  left: -16rpx;
  top: 0;
  width: 0;
  height: 0;
  border-top: 20rpx solid #FFFFFF;
  border-left: 20rpx solid transparent;
}

.greeting-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #5D4037;
}

.greeting-sub {
  font-size: 24rpx;
  color: #8C7467;
}
/* 许愿瓶展示区 */
.jar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  background: linear-gradient(180deg, rgba(255,255,255,0.6) 0%, rgba(255,255,255,0) 100%);
