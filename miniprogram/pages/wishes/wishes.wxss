/* 顶部区域 */
.header {
  padding: 24rpx 32rpx;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-content {
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

.avatar-container {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  border: 4rpx solid #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(107, 69, 43, 0.1);
  overflow: hidden;
  background: #FFFFFF;
  flex-shrink: 0;
}

.avatar-img {
  width: 100%;
  height: 100%;
}

.default-avatar {
  width: 100%;
  height: 100%;
  background: #FFD93D;
  display: flex;
  align-items: center;
  justify-content: center;
}

.default-avatar-face {
  font-size: 48rpx;
}

.greeting-bubble {
  background: #FFFFFF;
  padding: 20rpx 32rpx;
  border-radius: 0 32rpx 32rpx 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(107, 69, 43, 0.05);
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  position: relative;
  margin-top: 12rpx;
}

.greeting-bubble::before {
  content: '';
  position: absolute;
  left: -16rpx;
  top: 0;
  width: 0;
  height: 0;
  border-top: 20rpx solid #FFFFFF;
  border-left: 20rpx solid transparent;
}

.greeting-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #5D4037;
}

.greeting-sub {
  font-size: 24rpx;
  color: #8C7467;
}
/* 许愿瓶展示区 */
.jar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  background: linear-gradient(180deg, rgba(255,255,255,0.6) 0%, rgba(255,255,255,0) 100%);
}

.jar-container {
  width: 500rpx;
  height: 600rpx;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: flex-end;
  margin-bottom: 32rpx;
  overflow: visible;
}

.jar-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  z-index: 10;
}

.jar-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.points-badge {
  background: #FFFFFF;
  padding: 12rpx 32rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  gap: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(107, 69, 43, 0.1);
  border: 2rpx solid #FFD93D;
}

.badge-icon {
  width: 40rpx;
  height: 40rpx;
}

.badge-text {
  font-size: 32rpx;
  font-weight: 700;
  color: #6B452B;
}

.jar-tips {
  font-size: 26rpx;
  color: #8C7467;
}

/* 花瓣动画 - 微风飘落效果 */
.petal-container {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
  z-index: 20;
  overflow: visible;
}

.petal {
  position: absolute;
  width: 44rpx;
  height: 44rpx;
  left: var(--start-x, 0%);
  top: var(--start-y, 0%);
}

.petal-float {
  animation: petal-fall var(--duration, 9s) ease-in-out infinite;
  animation-delay: var(--delay, 0s);
}

.petal-img {
  width: 100%;
  height: 100%;
  filter: drop-shadow(0 2rpx 6rpx rgba(255, 107, 107, 0.3));
}

/* 完整的飘落动画 - 自然飘落 */
@keyframes petal-fall {
  0% {
    transform: translateX(0) translateY(0) rotate(0deg) scale(calc(var(--scale, 0.9) * 0.8));
    opacity: 0;
  }
  8% {
    opacity: 0.4;
  }
  15% {
    transform: translateX(3%) translateY(15%) rotate(30deg) scale(var(--scale, 0.9));
    opacity: 0.7;
  }
  25% {
    transform: translateX(8%) translateY(30%) rotate(60deg) scale(calc(var(--scale, 0.9) * 1.02));
    opacity: 0.85;
  }
  35% {
    transform: translateX(12%) translateY(50%) rotate(95deg) scale(var(--scale, 0.9));
    opacity: 0.9;
  }
  45% {
    transform: translateX(17%) translateY(70%) rotate(135deg) scale(calc(var(--scale, 0.9) * 1.01));
    opacity: 0.9;
  }
  55% {
    transform: translateX(22%) translateY(90%) rotate(180deg) scale(var(--scale, 0.9));
    opacity: 0.88;
  }
  65% {
    transform: translateX(27%) translateY(110%) rotate(225deg) scale(calc(var(--scale, 0.9) * 0.98));
    opacity: 0.8;
  }
  75% {
    transform: translateX(30%) translateY(130%) rotate(270deg) scale(calc(var(--scale, 0.9) * 0.95));
    opacity: 0.65;
  }
  85% {
    transform: translateX(33%) translateY(150%) rotate(315deg) scale(calc(var(--scale, 0.9) * 0.92));
    opacity: 0.4;
  }
  95% {
    transform: translateX(calc(var(--end-x, 50%) - var(--start-x, 0%) - 2%)) translateY(calc(var(--end-y, 160%) - var(--start-y, -15%) - 5%)) rotate(calc(var(--rotation, 360deg) - 20deg)) scale(calc(var(--scale, 0.9) * 0.88));
    opacity: 0.15;
  }
  100% {
    transform: translateX(calc(var(--end-x, 50%) - var(--start-x, 0%))) translateY(calc(var(--end-y, 160%) - var(--start-y, -15%))) rotate(var(--rotation, 360deg)) scale(calc(var(--scale, 0.9) * 0.85));
    opacity: 0;
  }
}

/* 记录列表 */
.history-section {
  padding: 32rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #5D4037;
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.history-item {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 32rpx;
  padding: 24rpx 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(93, 64, 55, 0.05);
  border: 4rpx solid transparent;
  transition: all 0.2s;
}

.item-income {
  background: #F0FFF4;
  border-color: #C6F6D5;
}

.item-expense {
  background: #FFF5F5;
  border-color: #FED7D7;
}

.history-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.history-icon-wrapper {
  width: 80rpx;
  height: 80rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #FFFFFF;
  font-size: 40rpx;
}

.item-income .history-icon-wrapper {
  background: #9AE6B4;
  color: #FFFFFF;
}

.item-expense .history-icon-wrapper {
  background: #FEB2B2;
  color: #FFFFFF;
}

.history-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.history-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #5D4037;
}

.history-time {
  font-size: 24rpx;
  color: #B3704C;
}

.history-right {
  font-size: 40rpx;
  font-weight: 700;
}

.history-right.income {
  color: #FF6B6B;
}

.history-right.expense {
  color: #6BCB77;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #B3704C;
}

