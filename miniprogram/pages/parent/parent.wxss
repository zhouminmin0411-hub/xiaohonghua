/* 家长首页样式 */

.container {
  min-height: 100vh;
  background: #F9F9F9;
  padding-bottom: 120rpx;
}

/* 头部统计 */
.header {
  background: linear-gradient(135deg, #667EEA 0%, #764BA2 100%);
  padding: 60rpx 32rpx 80rpx;
}

.stats-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.stat-item {
  flex: 1;
  text-align: center;
}

.stat-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.stat-value {
  display: block;
  font-size: 64rpx;
  font-weight: bold;
  color: #667EEA;
  margin-bottom: 8rpx;
}

.stat-unit {
  display: block;
  font-size: 24rpx;
  color: #999;
}

.divider {
  width: 2rpx;
  height: 80rpx;
  background: #EAEAEA;
}

/* 功能区域 */
.function-section {
  margin-top: -40rpx;
  padding: 0 32rpx;
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

.function-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.function-item {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s;
}

.function-item:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.1);
}

.function-icon {
  font-size: 80rpx;
  margin-bottom: 16rpx;
}

.function-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

/* 记录区域 */
.records-section {
  padding: 0 32rpx;
}

.record-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.record-card {
  background: white;
  border-radius: 24rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
}

.record-icon {
  font-size: 64rpx;
  width: 64rpx;
  height: 64rpx;
  flex-shrink: 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.record-info {
  flex: 1;
  min-width: 0;
}

.record-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-reward {
  color: #667EEA;
  font-size: 28rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.record-action {
  flex-shrink: 0;
}

.liked-tag {
  background: #FFE8E8;
  color: #FF5A5A;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
  color: #999;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
}

/* 积分调整对话框 */
.adjust-dialog-content {
  padding: 32rpx 0;
}

