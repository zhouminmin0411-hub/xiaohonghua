/* 每周积分配置页面 */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F5F0E8 0%, #FFF8E7 100%);
  padding-bottom: 40rpx;
}

.header {
  background: linear-gradient(135deg, #6B5744 0%, #8B7355 100%);
  padding: 32rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 12rpx;
}

.header-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.8);
}

.config-section {
  padding: 32rpx;
}

.status-card {
  background: linear-gradient(135deg, #FFF8E7 0%, #FFFFFF 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(107, 87, 68, 0.08);
}

.status-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  font-size: 28rpx;
}

.status-row:last-child {
  margin-bottom: 0;
}

.status-label {
  color: #8B7355;
  margin-right: 16rpx;
  min-width: 140rpx;
}

.status-value {
  color: #6B5744;
  font-weight: 700;
}

.status-value.enabled {
  color: #52C41A;
}

.status-value.disabled {
  color: #999999;
}

.config-card {
  background: white;
  border-radius: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(107, 87, 68, 0.08);
  margin-bottom: 24rpx;
}

.save-btn {
  background: linear-gradient(135deg, #6B5744 0%, #8B7355 100%);
  color: white;
  padding: 28rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 700;
  margin: 24rpx 32rpx 32rpx;
  border-radius: 48rpx;
  transition: all 0.3s ease;
}

.save-btn:active {
  transform: scale(0.98);
}

.tips-card {
  background: linear-gradient(135deg, #FFF8E7 0%, #FFF4DC 100%);
  border: 2rpx dashed #E8A87C;
  border-radius: 20rpx;
  padding: 32rpx;
}

.tips-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #6B5744;
  margin-bottom: 20rpx;
}

.tips-item {
  font-size: 26rpx;
  color: #8B7355;
  line-height: 1.8;
  padding-left: 8rpx;
}
