/* 家长积分调整页面 */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F5F0E8 0%, #FFF8E7 100%);
  padding-bottom: 40rpx;
}

.header {
  background: linear-gradient(135deg, #6B5744 0%, #8B7355 100%);
  padding: 32rpx;
}

.header-title {
  font-size: 40rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 20rpx;
}

.current-points {
  background: rgba(255, 255, 255, 0.15);
  padding: 24rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.points-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.points-number {
  font-size: 48rpx;
  font-weight: 700;
  color: white;
}

.adjust-section,
.history-section {
  padding: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #6B5744;
  margin-bottom: 24rpx;
}

.adjust-form {
  background: white;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(107, 87, 68, 0.08);
}

.quick-actions {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  margin: 32rpx 0;
}

.quick-btn {
  background: #F5F5F5;
  color: #6B5744;
  padding: 20rpx;
  border-radius: 16rpx;
  text-align: center;
  font-size: 28rpx;
  font-weight: 600;
  transition: all 0.3s ease;
}

.quick-btn:active {
  transform: scale(0.95);
  background: #E0E0E0;
}

.submit-btn {
  background: linear-gradient(135deg, #6B5744 0%, #8B7355 100%);
  color: white;
  padding: 28rpx;
  border-radius: 48rpx;
  text-align: center;
  font-size: 32rpx;
  font-weight: 700;
  margin-top: 24rpx;
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: scale(0.98);
}

.history-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.history-item {
  background: white;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(107, 87, 68, 0.06);
}

.history-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.history-change {
  font-size: 40rpx;
  font-weight: 700;
  width: 120rpx;
  text-align: center;
}

.change-positive {
  color: #4CAF50;
}

.change-negative {
  color: #F44336;
}

.history-info {
  flex: 1;
}

.history-reason {
  font-size: 28rpx;
  color: #6B5744;
  margin-bottom: 8rpx;
}

.history-time {
  font-size: 24rpx;
  color: #999;
}

.empty-state {
  text-align: center;
  padding: 80rpx 32rpx;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}
