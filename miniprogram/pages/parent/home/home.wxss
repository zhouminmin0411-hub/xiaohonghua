/* 家长首页样式 */

.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #F5F0E8 0%, #FFF8E7 100%);
  padding-bottom: 120rpx;
}

/* 头部区域 */
.header {
  background: linear-gradient(135deg, #6B5744 0%, #8B7355 100%);
  padding: 48rpx 32rpx;
  text-align: center;
}

.header-title {
  font-size: 44rpx;
  font-weight: 700;
  color: white;
  margin-bottom: 12rpx;
}

.header-subtitle {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

/* 本周统计卡片 */
.stats-section {
  padding: 0 32rpx;
  margin-top: -40rpx;
}

.stats-card {
  background: white;
  border-radius: 24rpx;
  padding: 40rpx 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(107, 87, 68, 0.12);
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.stats-item {
  text-align: center;
  flex: 1;
}

.stats-number {
  font-size: 56rpx;
  font-weight: 700;
  color: #6B5744;
  line-height: 1.2;
  margin-bottom: 8rpx;
}

.stats-label {
  font-size: 24rpx;
  color: #8B7355;
}

.stats-divider {
  width: 2rpx;
  height: 60rpx;
  background: #E0D5C7;
}

/* 快捷功能入口 */
.quick-actions {
  padding: 32rpx;
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.action-card {
  background: white;
  border-radius: 20rpx;
  padding: 32rpx 16rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(107, 87, 68, 0.08);
  transition: all 0.3s ease;
}

.action-card:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 8rpx rgba(107, 87, 68, 0.1);
}

.action-icon {
  font-size: 56rpx;
  margin-bottom: 12rpx;
}

.action-title {
  font-size: 24rpx;
  color: #6B5744;
  font-weight: 500;
}

/* 已完成任务区域 */
.completed-section {
  padding: 0 32rpx;
}

.section-title {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding: 0 8rpx;
}

.section-title text:first-child {
  font-size: 36rpx;
  font-weight: 700;
  color: #6B5744;
}

.section-count {
  font-size: 24rpx;
  color: #8B7355;
}

/* 任务记录列表 */
.task-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.task-record-card {
  background: white;
  border-radius: 24rpx;
  padding: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(107, 87, 68, 0.08);
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20rpx;
}

.task-record-left {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex: 1;
  min-width: 0;
}

.task-record-icon {
  font-size: 72rpx;
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.task-record-info {
  flex: 1;
  min-width: 0;
}

.task-record-title {
  font-size: 32rpx;
  color: #6B5744;
  font-weight: 600;
  margin-bottom: 8rpx;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
  text-overflow: ellipsis;
}

.task-record-meta {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.task-record-time {
  font-size: 24rpx;
  color: #999;
}

.task-record-reward {
  font-size: 24rpx;
  color: #E8A87C;
  font-weight: 600;
}

/* 点赞按钮 */
.task-record-right {
  flex-shrink: 0;
}

.like-btn {
  background: linear-gradient(135deg, #FF9A9E 0%, #FAD0C4 100%);
  color: white;
  padding: 16rpx 28rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 154, 158, 0.3);
  transition: all 0.3s ease;
}

.like-btn:active {
  transform: scale(0.95);
}

.like-icon {
  font-size: 32rpx;
}

.like-text {
  font-size: 28rpx;
  font-weight: 600;
}

.liked-badge {
  background: #FFE8E8;
  color: #FF6B6B;
  padding: 16rpx 28rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  gap: 8rpx;
  border: 2rpx solid rgba(255, 107, 107, 0.2);
}

.liked-icon {
  font-size: 32rpx;
}

.liked-text {
  font-size: 28rpx;
  font-weight: 600;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 120rpx 32rpx;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

/* 底部退出按钮 */
.footer-action {
  padding: 32rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(to top, rgba(245, 240, 232, 1) 0%, rgba(245, 240, 232, 0) 100%);
  padding-bottom: env(safe-area-inset-bottom);
}

.exit-btn {
  background: white;
  color: #8B7355;
  text-align: center;
  padding: 28rpx;
  border-radius: 48rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: 2rpx solid #D4C4B0;
  box-shadow: 0 4rpx 12rpx rgba(107, 87, 68, 0.08);
  transition: all 0.3s ease;
}

.exit-btn:active {
  transform: scale(0.98);
  background: #F9F9F9;
}

