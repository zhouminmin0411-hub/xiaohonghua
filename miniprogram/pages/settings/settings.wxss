/* 设置页面样式 · 绘本风 Refined v2.0 */

.page-container {
  min-height: 100vh;
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
  background: #F9EDC8; /* 奶油底色 */
}

/* 顶部导航栏 */
.header {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 24rpx 32rpx;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10px);
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 2rpx solid rgba(255,255,255,0.4);
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #6B452B;
}

/* 用户信息区域 */
.user-section {
  padding: 32rpx;
}

.user-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  padding: 48rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(93, 64, 55, 0.05);
  border: 4rpx dashed #FFD93D;
}

/* 头像编辑区域 */
.avatar-edit-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto;
}

.avatar-edit-btn {
  position: relative;
  padding: 0;
  margin: 0;
  border: none;
  background: transparent;
  width: 160rpx;
  height: 160rpx;
  display: block;
  line-height: 1;
}

.avatar-edit-btn::after {
  border: none;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  border: 6rpx solid #FFFFFF;
  box-shadow: 0 8rpx 16rpx rgba(107, 69, 43, 0.1);
  display: block;
  background: #F5F5F5;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  width: 100%;
}

/* 昵称编辑区域 */
.nickname-edit-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.nickname-input {
  font-size: 40rpx;
  font-weight: 700;
  color: #6B452B;
  text-align: center;
  min-width: 200rpx;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  background: rgba(255, 217, 61, 0.1);
  border: 2rpx dashed transparent;
  transition: all 0.2s;
}

.nickname-input:focus {
  border-color: #FFD93D;
  background: rgba(255, 217, 61, 0.2);
}

.edit-hint {
  font-size: 24rpx;
  opacity: 0.5;
}

.nickname {
  font-size: 40rpx;
  font-weight: 700;
  color: #6B452B;
}

.role-badge {
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 600;
}

.role-child {
  background: #FFE8E8;
  color: #EA6651;
}

.role-parent {
  background: #E8F0FE;
  color: #4285F4;
}

/* 设置列表 */
.settings-list {
  padding: 0 32rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.setting-item {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 4rpx 8rpx rgba(107, 69, 43, 0.05);
  transition: all 0.2s ease;
}

.setting-item:active {
  transform: scale(0.98);
  background: #FAFAFA;
}

.setting-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 20rpx;
  background: #FFF6D9;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.setting-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.setting-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #6B452B;
}

.setting-desc {
  font-size: 24rpx;
  color: #B3704C;
}

.setting-arrow {
  color: #D49435;
  font-weight: 700;
  font-size: 32rpx;
}

