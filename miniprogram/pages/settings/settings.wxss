/* 密码弹窗样式 */
.password-dialog-card {
  width: 600rpx;
  background: #FFF9E6;
  border-radius: 40rpx;
  padding: 48rpx 32rpx 32rpx;
  border: 4rpx solid #6B452B;
  box-shadow: 0 12rpx 0 #6B452B;
}

.dialog-title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 700;
  color: #6B452B;
  margin-bottom: 48rpx;
}

.password-input-area {
  margin-bottom: 48rpx;
}

.password-dots {
  display: flex;
  justify-content: center;
  gap: 32rpx;
}

.password-dot {
  width: 48rpx;
  height: 48rpx;
  border-radius: 24rpx;
  border: 4rpx solid #D49435;
  background: #FFFFFF;
  transition: all 0.2s;
}

.password-dot.filled {
  background: #EA6651;
  border-color: #EA6651;
}

/* 密码键盘 */
.password-keyboard {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.keyboard-row {
  display: flex;
  gap: 16rpx;
}

.key {
  flex: 1;
  height: 96rpx;
  background: #FFFFFF;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 600;
  color: #6B452B;
  box-shadow: 0 4rpx 0 #E3BFA0;
  transition: all 0.1s;
  border: 2rpx solid #E3BFA0;
}

.key:active {
  transform: translateY(4rpx);
  box-shadow: none;
  background: #FFF0D0;
}

.key.empty {
  background: transparent;
  box-shadow: none;
  border: none;
}

.key.delete {
  background: #FFE8E8;
  color: #EA6651;
  border-color: #FFC0C0;
  box-shadow: 0 4rpx 0 #FFC0C0;
}

.key.delete:active {
  background: #FFD0D0;
}

