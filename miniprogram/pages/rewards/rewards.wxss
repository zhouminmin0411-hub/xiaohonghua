/* 积分商城页面样式 */

.rewards-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #FFF7EB 0%, #FDEBEC 45%, #F6F3FF 100%);
  padding-bottom: 120rpx;
}

.rewards-hero {
  padding: 80rpx 40rpx 0;
}

.hero-glimmer {
  height: 220rpx;
  background: radial-gradient(circle at 20% 20%, rgba(255, 255, 255, 0.8), rgba(255, 193, 167, 0) 65%);
  border-radius: 48rpx;
  filter: blur(10rpx);
}

.hero-content {
  margin-top: -200rpx;
  background: rgba(255, 255, 255, 0.55);
  border-radius: 48rpx;
  padding: 48rpx;
  box-shadow: 0 35rpx 70rpx rgba(165, 125, 105, 0.25);
  backdrop-filter: blur(18rpx);
}

.hero-text-group {
  margin-bottom: 32rpx;
}

.hero-label {
  font-size: 48rpx;
  font-weight: 700;
  color: #4F3C32;
}

.hero-sub {
  display: block;
  font-size: 28rpx;
  color: #8C7467;
  margin-top: 8rpx;
}

.hero-points-card {
  display: flex;
  align-items: center;
  gap: 24rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  padding: 32rpx;
  box-shadow: inset 0 0 0 4rpx rgba(255, 255, 255, 0.5), 0 15rpx 40rpx rgba(255, 161, 123, 0.35);
}

.hero-flower {
  width: 120rpx;
  height: 120rpx;
  border-radius: 32rpx;
  background: linear-gradient(135deg, #FFD6A3, #FF9F7A);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 62rpx;
}

.hero-points-info {
  display: flex;
  flex-direction: column;
}

.hero-points-label {
  font-size: 26rpx;
  color: #8C7467;
  margin-bottom: 8rpx;
}

.hero-points-value {
  font-size: 64rpx;
  font-weight: 700;
  color: #FF7A5C;
}

.rewards-section {
  margin-top: -20rpx;
  padding: 0 32rpx 80rpx;
}

.section-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #4F3C32;
  margin-bottom: 16rpx;
}

.section-subtitle {
  display: block;
  font-size: 26rpx;
  color: #B08874;
}

.reward-list {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
  margin-top: 32rpx;
}

.reward-card {
  background: rgba(255, 255, 255, 0.78);
  border-radius: 36rpx;
  padding: 32rpx;
  box-shadow: 0 20rpx 40rpx rgba(110, 77, 62, 0.12);
  border: 2rpx solid rgba(255, 255, 255, 0.4);
  backdrop-filter: blur(14rpx);
}

.reward-card.reward-disabled {
  opacity: 0.7;
}

.reward-card-body {
  display: flex;
  gap: 24rpx;
  align-items: center;
}

.reward-icon-wrapper {
  width: 120rpx;
  height: 120rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: inset 0 0 0 4rpx rgba(255, 255, 255, 0.6);
}

.reward-icon {
  font-size: 72rpx;
}

.reward-info {
  flex: 1;
}

.reward-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.reward-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #4A3422;
}

.reward-type-tag {
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  background: rgba(255, 185, 120, 0.25);
  font-size: 24rpx;
  color: #B07B47;
}

.reward-meta {
  margin-top: 16rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.reward-cost {
  color: #FF7A5C;
  font-weight: 700;
}

.cost-number {
  font-size: 40rpx;
}

.cost-unit {
  font-size: 26rpx;
}

.reward-hint {
  font-size: 24rpx;
  color: #A68167;
}

.reward-action {
  margin-top: 24rpx;
}

.redeem-btn {
  width: 100%;
  text-align: center;
  padding: 28rpx 0;
  border-radius: 999rpx;
  font-size: 30rpx;
  font-weight: 700;
  color: #fff;
  background: linear-gradient(135deg, #FFAE8C, #FF7A5C);
  box-shadow: 0 18rpx 30rpx rgba(255, 122, 92, 0.35);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.redeem-btn:active {
  transform: translateY(6rpx);
  box-shadow: 0 6rpx 10rpx rgba(255, 122, 92, 0.25);
}

.redeem-btn.btn-disabled {
  background: linear-gradient(135deg, #DDD7D2, #C9C4C0);
  color: #8C8580;
  box-shadow: none;
}

.empty-state {
  text-align: center;
  padding: 150rpx 32rpx;
  color: #B08874;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 30rpx;
}

.particle-canvas {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  pointer-events: none;
  z-index: 9999;
}
