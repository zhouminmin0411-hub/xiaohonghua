/* 积分商城页面样式 · 绘本风 Refined v2.0 */

.page-container {
  min-height: 100vh;
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
  /* 背景色已在 app.wxss 定义 */
}

/* 顶部导航栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10px);
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 2rpx solid rgba(255,255,255,0.4);
}

.header-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #5D4037;
}

/* 列表区域 */
.section {
  padding: 32rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #5D4037;
  margin-right: 16rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: #B3704C;
}

.reward-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.reward-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(93, 64, 55, 0.05);
  border: 4rpx dashed #FFD93D;
  transition: all 0.2s ease;
}

.reward-card:active {
  transform: scale(0.98);
}

.reward-disabled {
  opacity: 0.6;
  background: #F0E6D6;
  border-style: solid;
  border-color: #E0E0E0;
}

.reward-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 20rpx;
  background: #FFE8E8;
  border: 2rpx solid #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  box-shadow: 0 2rpx 6rpx rgba(107, 69, 43, 0.05);
}

.reward-info {
  flex: 1;
}

.reward-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #5D4037;
  margin-bottom: 8rpx;
}

.reward-cost {
  font-size: 26rpx;
  color: #FF6B6B;
  font-weight: 500;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.reward-cost-icon {
  width: 28rpx;
  height: 28rpx;
}

.reward-action {
  min-width: 140rpx;
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  /* 样式继承自 app.wxss .primary-btn */
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-disabled {
  background: #E0D0C0;
  color: #FFFFFF;
  border: 2rpx solid #C0B0A0;
  border-radius: 48rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  font-weight: 600;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #B3704C;
}

.particle-canvas {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  pointer-events: none;
  z-index: 9999;
}
