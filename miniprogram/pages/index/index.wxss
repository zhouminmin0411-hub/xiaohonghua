/* 小朋友首页样式 */

.page {
  min-height: 100vh;
  padding: 48rpx 32rpx calc(220rpx + env(safe-area-inset-bottom, 0));
  background: linear-gradient(180deg, #FEF6E9 0%, #FFFDF9 55%, #FCEFED 100%);
  position: relative;
}

.hero {
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.6), rgba(255, 228, 205, 0.85));
  border-radius: 48rpx;
  padding: 48rpx;
  box-shadow: 0 30rpx 60rpx rgba(255, 129, 92, 0.17);
  backdrop-filter: blur(20rpx);
  margin-bottom: 48rpx;
  position: relative;
  overflow: hidden;
}

.hero::after {
  content: "";
  position: absolute;
  width: 320rpx;
  height: 320rpx;
  background: radial-gradient(circle, rgba(255, 186, 140, 0.4), transparent 70%);
  top: -40rpx;
  right: -40rpx;
  z-index: 0;
}

.hero-top {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  position: relative;
  z-index: 1;
}

.brand-label {
  font-size: 52rpx;
  font-weight: 700;
  color: #5F4233;
}

.brand-subtitle {
  display: block;
  font-size: 28rpx;
  color: #8B6A55;
  margin-top: 8rpx;
}

.settings-entry {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  background: rgba(255, 255, 255, 0.7);
  box-shadow: 0 12rpx 24rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: center;
  justify-content: center;
}

.settings-entry.pressed {
  transform: scale(0.95);
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.settings-icon {
  font-size: 44rpx;
}

.flower-counter {
  margin-top: 40rpx;
  background: rgba(255, 255, 255, 0.85);
  border-radius: 40rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 32rpx;
  position: relative;
  z-index: 1;
}

.counter-left {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.flower-emblem {
  width: 120rpx;
  height: 120rpx;
  border-radius: 32rpx;
  background: linear-gradient(135deg, #FFD6A3, #FF9F7A);
  box-shadow: inset 0 0 0 6rpx rgba(255, 255, 255, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
}

.counter-info {
  display: flex;
  flex-direction: column;
}

.counter-label {
  font-size: 28rpx;
  color: #8B6A55;
  margin-bottom: 8rpx;
}

.counter-value {
  font-size: 72rpx;
  font-weight: 700;
  color: #FF7A5C;
}

.counter-flash {
  color: #B07B47;
  font-size: 28rpx;
}

.hero-metas {
  display: flex;
  gap: 16rpx;
  margin-top: 32rpx;
  z-index: 1;
  position: relative;
}

.meta-card {
  flex: 1;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 28rpx;
  padding: 24rpx;
  box-shadow: 0 10rpx 30rpx rgba(255, 195, 160, 0.3);
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.meta-label {
  font-size: 24rpx;
  color: #B07B47;
}

.meta-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #5F4233;
}

.tasks-section {
  position: relative;
  z-index: 1;
}

.section-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #5F4233;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.task-card {
  background: linear-gradient(145deg, rgba(255, 255, 255, 0.9), rgba(255, 239, 219, 0.92));
  border-radius: 40rpx;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start; /* 子元素居左对齐 */
  gap: 28rpx;
  box-shadow: 0 20rpx 40rpx rgba(255, 159, 122, 0.15);
  border: 2rpx solid rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(16rpx);
}

.task-card.task-received {
  background: linear-gradient(145deg, rgba(255, 255, 255, 0.98), rgba(248, 234, 220, 0.98));
  border-color: rgba(255, 184, 121, 0.6);
}

.task-card.task-completed {
  background: linear-gradient(145deg, rgba(249, 255, 247, 0.9), rgba(226, 248, 226, 0.9));
  border-color: rgba(142, 201, 130, 0.8);
  box-shadow: 0 18rpx 36rpx rgba(120, 196, 140, 0.2);
}

.task-card-body {
  display: grid;
  grid-template-columns: 120rpx 1fr;
  column-gap: 24rpx;
  align-items: flex-start;
}

.task-icon {
  font-size: 80rpx;
  width: 120rpx;
  height: 120rpx;
  border-radius: 32rpx;
  background: rgba(255, 255, 255, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: inset 0 0 0 4rpx rgba(255, 255, 255, 0.6);
  flex-shrink: 0;
}

.task-content {
  flex: 1;
}

.task-title-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 12rpx;
}

.task-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #4A3422;
  flex: 1;
}

.task-tag {
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #B07B47;
  background: rgba(255, 193, 167, 0.35);
}

.task-meta-row {
  display: flex;
  flex-wrap: wrap;
  align-items: center;
  gap: 16rpx;
  margin-top: 16rpx;
}

.task-duration {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #7C5A44;
}

.meta-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background: #FF8B6C;
  margin-right: 8rpx;
}

.task-reward-pill {
  padding: 8rpx 24rpx;
  border-radius: 999rpx;
  background: rgba(255, 138, 108, 0.14);
  color: #FF7A5C;
  font-weight: 600;
  font-size: 26rpx;
}

.task-description {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: #83604C;
  line-height: 1.4;
}

.status-pill {
  padding: 6rpx 20rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.status-completed {
  background: rgba(129, 199, 132, 0.18);
  color: #388E3C;
}

.status-liked {
  background: rgba(255, 108, 135, 0.18);
  color: #D75A77;
}

.task-action-wrapper {
  width: 100%;
  display: flex;
}

.task-action-btn {
  width: 100%;
  padding: 28rpx 32rpx;
  border-radius: 999rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 700;
  color: #fff;
  box-shadow: 0 12rpx 24rpx rgba(255, 140, 106, 0.35);
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.task-action-btn:active {
  transform: translateY(6rpx);
  box-shadow: 0 4rpx 10rpx rgba(255, 140, 106, 0.3);
}

.task-btn-warning {
  background: linear-gradient(135deg, #FFB978, #FF8B6C);
}

.task-btn-primary {
  background: linear-gradient(135deg, #7ED89C, #5DC78A);
}

.completed-badge {
  width: 100%;
  padding: 0;
  background: transparent;
}

.completed-inline {
  width: 100%;
  display: flex;
  gap: 12rpx;
  align-items: center;
  flex-wrap: wrap;
}

.empty-state {
  text-align: center;
  padding: 160rpx 32rpx;
  color: #C29572;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 30rpx;
}

.floating-nav {
  position: fixed;
  left: 50%;
  bottom: calc(24rpx + env(safe-area-inset-bottom, 0));
  transform: translateX(-50%);
  width: 86%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.9);
  border-radius: 999rpx;
  padding: 12rpx 24rpx;
  box-shadow: 0 25rpx 60rpx rgba(108, 74, 55, 0.25);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: transform 0.3s ease, opacity 0.3s ease;
  z-index: 999;
}

.floating-nav-hidden {
  transform: translate(-50%, 160%);
  opacity: 0;
  pointer-events: none;
}

.nav-item {
  flex: 1;
  text-align: center;
  color: #9B7A62;
  font-size: 24rpx;
  font-weight: 600;
  padding: 12rpx 0;
  border-radius: 999rpx;
  transition: background 0.2s ease;
}

.nav-item.active {
  background: linear-gradient(120deg, rgba(255, 185, 120, 0.35), rgba(255, 138, 108, 0.45));
  color: #5F4233;
}

.nav-icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
}

.flower-animation {
  position: fixed;
  font-size: 80rpx;
  z-index: 9999;
  pointer-events: none;
}
