/* 小朋友首页样式 · 绘本风 Refined v2.0 */

.page-container {
  min-height: 100vh;
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
  /* 背景色已在 app.wxss 定义 */
}

/* 顶部导航栏 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background: rgba(255, 255, 255, 0.6);
  backdrop-filter: blur(10px);
  position: sticky;
  top: 0;
  z-index: 100;
  border-bottom: 2rpx solid rgba(255,255,255,0.4);
}

.header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: #FFE8E8;
  border: 4rpx solid #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
  box-shadow: 0 4rpx 8rpx rgba(107, 69, 43, 0.1);
}

.avatar-text {
  font-size: 40rpx;
}

.greeting {
  display: flex;
  flex-direction: column;
}

.greeting-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #5D4037;
}

/* 任务列表区域 */
.section {
  padding: 32rpx;
}

.section-header {
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  color: #5D4037;
  margin-right: 16rpx;
}

.section-subtitle {
  font-size: 26rpx;
  color: #B3704C;
}

.task-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.task-card {
  background: rgba(255, 255, 255, 0.9);
  border-radius: 40rpx;
  padding: 32rpx;
  display: flex;
  align-items: center;
  gap: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(93, 64, 55, 0.05);
  border: 4rpx dashed #FFD93D;
  transition: all 0.2s ease;
}

.task-card:active {
  transform: scale(0.98);
}

.task-completed {
  opacity: 0.8;
  background: rgba(255, 255, 255, 0.6);
  border-style: solid;
  border-color: #E0E0E0;
}

.task-icon-wrapper {
  width: 96rpx;
  height: 96rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.task-icon {
  font-size: 80rpx;
}

.task-info {
  flex: 1;
}

.task-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #5D4037;
  margin-bottom: 8rpx;
}

.task-reward {
  font-size: 28rpx;
  color: #FF6B6B;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.reward-icon-small {
  width: 32rpx;
  height: 32rpx;
}

.task-action {
  min-width: 140rpx;
  display: flex;
  justify-content: flex-end;
}

.action-btn {
  /* 样式与积分商城兑换按钮一致，主样式由 app.wxss .primary-btn 提供 */
  display: flex;
  align-items: center;
  justify-content: center;
}

.status-text {
  color: #6BCB77;
  font-size: 28rpx;
  font-weight: 600;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 96rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #B3704C;
}

/* 动画 */
.flower-animation {
  position: fixed;
  font-size: 60rpx;
  z-index: 9999;
  pointer-events: none;
}
