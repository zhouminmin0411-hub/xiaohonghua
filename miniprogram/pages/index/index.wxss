/* 小朋友首页样式 · 绘本风 */

.page {
  min-height: 100vh;
  padding: 32rpx 32rpx calc(260rpx + env(safe-area-inset-bottom, 0));
  background: #FCF2C8;
  position: relative;
  font-family: "SF Pro Rounded", "PingFang SC", "Helvetica Neue", sans-serif;
  color: #6B452B;
}

.paper-noise {
  position: fixed;
  inset: 0;
  pointer-events: none;
  background-image:
    repeating-linear-gradient(0deg, rgba(0, 0, 0, 0.02) 0, rgba(0, 0, 0, 0.02) 1px, transparent 1px, transparent 3px),
    repeating-linear-gradient(90deg, rgba(0, 0, 0, 0.02) 0, rgba(0, 0, 0, 0.02) 1px, transparent 1px, transparent 3px);
  opacity: 0.6;
  z-index: 0;
}

.hero {
  background: transparent;
  border-radius: 0;
  padding: 0 0 12rpx 0;
  position: relative;
  overflow: hidden;
  margin-bottom: 24rpx;
}

/* 移除大卡片光晕 */
.hero::after { display: none; }

.hero-header {
  display: flex;
  align-items: center;
  gap: 24rpx;
  position: relative;
  z-index: 1;
}

.avatar-bubble {
  width: 132rpx;
  height: 132rpx;
  border-radius: 50%;
  background: radial-gradient(circle at 30% 30%, #ffe9c8, #f7c880);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #6b452b;
  font-size: 64rpx;
}

.hero-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.hero-title {
  font-size: 44rpx; /* 24pt 映射 */
  font-weight: 600; /* Semibold */
  color: #6B452B;
}

.hero-subline {
  font-size: 32rpx;
  font-weight: 500;
  color: #7C624F;
}

.wish-jar-card {
  margin-top: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6rpx;
  position: relative;
  overflow: hidden;
}

.jar-petals {
  position: absolute;
  width: 520rpx;
  height: 520rpx;
  left: 50%;
  top: 0;
  transform: translateX(-50%);
  pointer-events: none;
  z-index: 1; /* 在瓶子下方，如需更上层可调大 */
}

.floating-petal {
  position: absolute;
  width: 96rpx;
  height: 96rpx;
  object-fit: contain;
  opacity: 1;
  animation-name: petalDrift;
  animation-duration: var(--dur, 10s);
  animation-delay: var(--del, 0s);
  animation-iteration-count: infinite;
  animation-timing-function: ease-in-out;
}

.petal-static {
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  width: 96rpx;
  height: 96rpx;
  object-fit: contain;
  z-index: 5;
  opacity: 1;
}

.jar-visual {
  position: relative;
  width: 520rpx;
  height: 520rpx;
  background: transparent;
  border-radius: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: jarFloat 4s ease-in-out infinite;
  z-index: 2;
}

.jar-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  z-index: 1;
  opacity: 0.7; /* 适度透出底部花朵 */
}


.tasks-section {
  position: relative;
  z-index: 1;
}

.section-title {
  display: flex;
  align-items: baseline;
  gap: 10rpx;
  font-size: 34rpx;
  font-weight: 700;
  color: #6B452B;
  margin-bottom: 18rpx;
}

.section-mark {
  font-size: 28rpx;
  color: #EFAF4A;
}

.section-sub {
  font-size: 24rpx;
  color: #9B7A62;
}

.task-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 24rpx;
}

.task-card {
  background: #FBE4B5;
  border-radius: 32rpx;
  padding: 28rpx 26rpx 24rpx;
  border: 0;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.task-card.task-received {
  border: 0;
}

.task-card.task-completed {
  border: 0;
  background: #FBE4B5;
}

.task-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 28rpx;
  background: radial-gradient(circle at 30% 30%, #ffe9c8, #f7c880);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 76rpx;
}

.task-text {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  color: #6B452B;
}

.task-title {
  font-size: 34rpx; /* 18pt 映射 */
  font-weight: 600; /* Medium */
}

.task-sub {
  display: none;
}

.task-meta-row {
  display: none;
}

.pill {
  display: none;
}

.pill-reward {
  display: none;
}

.pill-type {
  display: none;
}

.task-reward-brief {
  margin-top: 4rpx;
  font-size: 28rpx; /* 14pt 映射 */
  color: #7C624F;
}

.task-action-wrapper {
  width: 100%;
  display: flex;
}

.task-action-btn {
  width: 100%;
  height: 96rpx; /* 48pt 映射 */
  padding: 0 40rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 800;
  color: #fff;
  transition: transform 0.18s ease;
  background: #EFAF4A;
}

.task-action-btn:active {
  transform: scale(0.96);
}

.task-btn-accent {
  background: #EFAF4A;
}

.task-status-inline {
  width: 100%;
  display: flex;
  gap: 10rpx;
  align-items: center;
  flex-wrap: wrap;
}

.status-pill {
  display: none;
}

.status-simple {
  font-size: 26rpx;
  color: #5A8C4F;
  font-weight: 700;
}

.empty-state {
  text-align: center;
  padding: 160rpx 32rpx;
  color: #9B7A62;
}

.empty-icon {
  font-size: 120rpx;
  display: block;
  margin-bottom: 24rpx;
}

.empty-text {
  font-size: 30rpx;
}

.floating-nav {
  position: fixed;
  left: 50%;
  bottom: calc(28rpx + env(safe-area-inset-bottom, 0));
  transform: translateX(-50%);
  width: 88%;
  max-width: 640rpx;
  background: #EFC77A;
  border-radius: 999rpx;
  padding: 16rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: transform 0.3s ease, opacity 0.3s ease;
  z-index: 999;
}

.floating-nav-hidden {
  transform: translate(-50%, 160%);
  opacity: 0;
  pointer-events: none;
}

.nav-item {
  flex: 1;
  text-align: center;
  color: #6B452B;
  font-size: 26rpx;
  font-weight: 700;
  padding: 8rpx 0;
}

.nav-icon {
  width: 64rpx;
  height: 64rpx;
  margin: 0 auto 10rpx;
  background-size: contain;
  background-repeat: no-repeat;
  background-position: center;
}

.nav-icon-tasks { background-image: url('/assets/tab_tasks.png'); }
.nav-icon-flowers { background-image: url('/assets/tab_flowers.png'); }
.nav-icon-gift { background-image: url('/assets/tab_gift.png'); }
.jar-animate {
  animation: jarPop 420ms ease-out;
}

@keyframes jarFloat {
  0% { transform: translateY(0); }
  50% { transform: translateY(-8rpx); }
  100% { transform: translateY(0); }
}

@keyframes jarPop {
  0% { transform: scale(0.94); }
  60% { transform: scale(1.04); }
  100% { transform: scale(1); }
}

@keyframes petalDrift {
  0% { transform: translateY(0) translateX(0) scale(var(--scale, 1)); opacity: 0.4; }
  50% { transform: translateY(-32rpx) translateX(18rpx) scale(var(--scale, 1)); opacity: 0.85; }
  100% { transform: translateY(0) translateX(0) scale(var(--scale, 1)); opacity: 0.4; }
}

.flower-animation {
  position: fixed;
  font-size: 80rpx;
  z-index: 9999;
  pointer-events: none;
}
